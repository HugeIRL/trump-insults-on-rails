<div class="card">
  <div class="card-body">
    <h5 class="card-title">🤬  " <%= @insult.text %> "</h5>
    <hr>
<% @insult.tweets.each do |insult| %>
      <div class="card my-3">
        <div class="card-body">
         <h4>🐥 " <span class="text-danger"><%= link_to insult.message, insult %></span> "</h4>
          <small class="text-muted"><%= insult.date.strftime("%b %d, %Y") %></small>
        </div>
      </div>
    <% end %>
    <hr>
    <a href="<%= insults_path %>" class="btn btn-danger">View All 🤬</a>
  </div>
</div>